extends ../layout
script(src='/lib/mixitup/build/jquery.mixitup.min.js')
block content
  div(class="content")
   main(class="cd-main-content")
    div(class="cd-tab-filter-wrapper")
     div(class="cd-tab-filter")
      ul(class="cd-filters")
       li(class="placeholder")
        a(data-type="all", href="#0") All
       li(class="filter")
        a(class="selected", href="#0", data-type="all") All
       li(class="filter", data-filter=".color-1")
        a(href="#0", data-type="color-1") Color 1
       li(class="filter", data-filter=".color-2")
        a(href="#0", data-type="color-2") Color 2
    section(class="cd-gallery")
     ul
      li(class="mix color-1 check1 radio2 option3")
       h2 Content
      li(class="mix color-2 check2 radio2 option2")
       h2 Content
      li(class="mix color-1 check3 radio3 option1")
       h2 Content
      li(class="mix color-1 check3 radio2 option4")
       h2 Content
      li(class="mix color-1 check1 radio3 option2")
       h2 Content
      li(class="mix color-2 check2 radio3 option3")
       h2 Content
      li(class="mix color-2 check2 radio2 option1")
       h2 Content
      li(class="mix color-1 check1 radio3 option4")
       h2 Content
      li(class="mix color-2 check1 radio2 option3")
       h2 Content
      li(class="mix color-1 check3 radio2 option4")
       h2 Content
      li(class="mix color-1 check3 radio3 option2")
       h2 Content
      li(class="mix color-2 check1 radio3 option1")
       h2 Content
      li(class="gap")
      li(class="gap")
      li(class="gap")
     div(class="cd-fail-message") No Results found
    div(class="cd-filter")
     form
      div(class="cd-filter-block")
       h4 Search
       div(class="cd-filter-content")
        input(type="search", placeholder="Try color-1...")
      div(class="cd-filter-block")
       h4 Cheack boxes
       ul(class="cd-filter-content cd-filters list")
        li
         input(class="filter", data-filter=".check1", type="checkbox", id="checkbox1")
         label(class="checkbox-label", for="checkbox1") Option 1
        li
         input(class="filter", data-filter=".check2", type="checkbox", id="checkbox2")
         label(class="checkbox-label", for="checkbox2") Option 2
        li
         input(class="filter", data-filter=".check3", type="checkbox", id="checkbox3")
         label(class="checkbox-label", for="checkbox3") Option 3
      div(class="cd-filter-block")
       h4 Select
       div(class="cd-filter-content")
        div(class="cd-select cd-filters")
         select(class="filter", name="selectThis", id="selectThis")
          option(value="") Choose an option
          option(value=".option1") Option 1
          option(value=".option2") Option 2
          option(value=".option3") Option 3
          option(value=".option4") Option 4
      div(class="cd-filter-block")
       h4 Radio buttons
       ul(class="cd-filter-content cd-filters list")
        li
         input(class="filter", data-filter="", type="radio", name="radioButton", id="radio1", checked)
         label(class="radio-label", for="radio1") All
        li
         input(class="filter", data-filter="", type="radio", name="radioButton", id="radio2", checked)
         label(class="radio-label", for="radio2") Choise 2
        li
         input(class="filter", data-filter="", type="radio", name="radioButton", id="radio3", checked)
         label(class="radio-label", for="radio3") Choise 3
     a(href="#0", class="cd-close") Close
    a(href="#0", class="cd-filter-trigger") Filters